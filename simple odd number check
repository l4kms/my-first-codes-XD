        if (a % 2 == 0)
        {
            cout << "chetnoe: " << endl;
        }

        else if (a % 2 == 1)
        {
            cout << "nechetnoe: " << endl; # if u neded change it, it writed partly on russian ( this messages for all cout );
        }
    }
